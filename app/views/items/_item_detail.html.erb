
	<strong><%= "#{item.name}" %></strong> in <%= "#{item.list.title}" %><% if item.list.user == current_user %>
		<%= link_to ' &times;'.html_safe, item, method: :delete %><% end %>
	<br />
	<% if !item.category.blank? or !item.location.blank? %>
	(<%= item.category %><%= !item.location.blank? ? ", #{item.location}" : "" %>)
	<% end %>

	<% if item.list.user != current_user %>
	<br />
			<a href="#" rel="popover" data-placement="right" data-trigger="manual" data-content='

		<%= form_tag url_for(:controller => 'items', :action => 'add'), :remote => 'true', :method => 'post', :class => 'add_form' do %>
					  <%= hidden_field_tag :item_id, item.id %>
				      <%= select_tag :list, options_for_select(current_user.lists.map{|l| l.title}), :style => 'width:160px; height:28px; font-size:1em; margin-top:10px; margin-right:20px', :class=>'list' %>
				      <%= submit_tag "Add", :class=>"btn btn-primary" %>
				    <% end %>
				    <div class="item_notice" style="color:green"></div>' data-title="Add item to your list" style="font-size:0.8em" class="poppy btn btn-mini">add</a><br />

				    <% end %>

	<br /> 
	<br /> 
	<%= item.initial_comment %>	
  	<br />
			<div class="comments">
				<strong>Comments:</strong><br/>
      			<%= render item.comments %>
		    </div>
		    <br />
			<%= form_for(Comment.new, remote: true) do |f| %>
				<%= f.hidden_field :item_id, :value => item.id %>
				<div class="field">
					<%= f.text_field :body, placeholder: "Write a comment..." %>
				</div>
				<div class="actions">
					<%= f.submit "Comment", :class => "btn btn-mini" %>
				</div>
			<% end %>


