<br />

<div class="row">
  <div class="span3">
  	<h2><%= @user.firstname %> <%= @user.lastname %> <%= @user.id %></h2>
  	<%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
  	<br />
  	
  	Your Friends: <br />
  	<ul>
  	<% for friend in @user.friends %>
    	<li>
      		<%= friend.firstname %>
    	</li>
  	<% end %>
	</ul>
  	
  	Friendship Requests to you: <br />
  	<ul>
  	<% for friend in @user.requested_friendships %>
    	<li>
      		<%= friend.firstname %>
    	</li>
  	<% end %>
	</ul>

  	<br />
  	Friendship Requests you made:<br />
  	<ul>
  	<% for friend in @user.pending_friends %>
    	<li>
      		<%= friend.firstname %>
    	</li>
  	<% end %>
	</ul>

	<br />
  	<br />
	<%= form_for(List.new, remote: true) do |f| %>
		<div class="field">
			<%= f.label :title, "Enter list title:" %>
			<%= f.text_field :title %>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div>
	<% end %>
  </div>  
  <div id="item_show"></div>
</div>

<div class="row">
	  <div class="offset3 span3"><h3>Your Favorites</h3></div>
	  <div class="offset0 span3"><h3>Friends Favorites</h3></div>
	  <div class="offset0 span3"><h3>Wish List</h3></div>
</div>
<div id="lists">
  <%= render @lists %>
</div>
  